{
  "expo": {
    "name": "FridgeWise",
    "slug": "fridgewise-app",
    "version": "1.0.0",
    "description": "AI-powered food recognition and recipe generation app that helps you manage your fridge inventory and discover delicious recipes based on available ingredients",
    "privacy": "public",
    "primaryColor": "#16A34A",
    "category": "Food & Drink",
    "keywords": ["food", "recipes", "cooking", "AI", "ingredients", "fridge", "meal planning", "food recognition"],
    "orientation": "portrait",
    "contentRating": {
      "rating": "13+",
      "advisory": []
    },
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "dark": {
        "image": "./assets/icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#000000"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fridgewise.app",
      "buildNumber": "1",
      "userInterfaceStyle": "automatic",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSCameraUsageDescription": "FridgeWise needs camera access to scan and identify ingredients from your fridge for recipe suggestions",
        "NSPhotoLibraryUsageDescription": "FridgeWise needs photo library access to select ingredient images for analysis and recipe generation",
        "NSPhotoLibraryAddUsageDescription": "FridgeWise may save generated recipes and ingredient photos to your photo library",
        "ITSAppUsesNonExemptEncryption": false
      },
      "appStoreUrl": "https://apps.apple.com/app/fridgewise/idXXXXXXXXXX"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#16A34A"
      },
      "package": "com.fridgewise.app",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "userInterfaceStyle": "automatic",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.fridgewise.app",
      "intentFilters": [
        {
          "action": "VIEW",
          "data": {
            "scheme": "https",
            "host": "fridgewiseai.com"
          },
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "FridgeWise - AI Recipe Generator",
      "shortName": "FridgeWise",
      "lang": "en",
      "scope": "/",
      "themeColor": "#16A34A",
      "backgroundColor": "#ffffff",
      "startUrl": "/",
      "display": "standalone",
      "orientation": "portrait"
    },
    "hooks": {
      "postPublish": [
        {
          "file": "sentry-expo/upload-sourcemaps",
          "config": {
            "organization": "fridgewise",
            "project": "fridgewise-app"
          }
        }
      ]
    },
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}
